    <style name="Theme.EuAiTalk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#6B46C1</item>
        <item name="colorPrimaryVariant">#553C9A</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">#9333EA</item>
        <item name="colorSecondaryVariant">#7E22CE</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background color -->
        <item name="android:windowBackground">@color/background_gradient</item>
    </style>
</resources>
